/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
	max-height 0
	padding 0 !important
	transform translateX(-120%)
	transition all 0.5s

	&.order-enter-active
		max-height 60px
		padding 2rem 0 !important
		transform translateX(0)


.order-leave
	transform translateX(0)
	transition all 0.5s

	&.order-leave-active
		max-height 0
		padding 0
		transform translateX(120%)

.count-enter
	transition all 0.5s
	transform translateY(100%) // start off screen
	&.count-enter-active
		transform translateY(0) // put it in it's normal resting spot

.count-leave
	position absolute
	left 0
	bottom 0
	transform translateY(0) // start it where it is
	transition all 0.5s
	&.count-leave-active
		transform translateY(-100%)
